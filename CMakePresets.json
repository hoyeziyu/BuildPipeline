{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vendor/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "windows-msvc-debug",
      "inherits": "base",
      "displayName": "Windows MSVC x64 Debug",
      "binaryDir": "${sourceDir}/build/msvc-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-msvc-release",
      "inherits": "base",
      "displayName": "Windows MSVC x64 Release",
      "binaryDir": "${sourceDir}/build/msvc-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "sanitize",
      "inherits": "base",
      "displayName": "Address Sanitizer (ASan)",
      "binaryDir": "${sourceDir}/build/sanitize",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Sanitize",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDebugDLL",
        "CMAKE_CXX_FLAGS": "/fsanitize=address /Zi",
        "CMAKE_EXE_LINKER_FLAGS": "/INCREMENTAL:NO"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "windows-msvc-debug",
      "configuration": "Debug"
    },
    {
      "name": "release",
      "configurePreset": "windows-msvc-release",
      "configuration": "Release"
    },
    {
      "name": "sanitize",
      "configurePreset": "sanitize"
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "displayName": "Run All Tests",
      "configurePreset": "windows-msvc-debug",
      "output": { "outputOnFailure": true }
    },
    {
      "name": "sanitize",
      "configurePreset": "sanitize",
      "output": {
        "outputOnFailure": true
      },
      "environment": {
        "PATH": "D:/Apps/vs2022/path/VC/Tools/MSVC/14.44.35207/bin/Hostx64/x64;$PENv{PATH}",
        "ASAN_OPTIONS": "detect_stack_use_after_return=1:symbolize=1:check_initialization_order=1"
      }
    }
  ]
}